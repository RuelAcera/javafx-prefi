<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aclcbukidnon.com.javafxactivity.controllers.TodoController"
      prefWidth="600.0" prefHeight="400.0"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-background-color: #f5f7fa;">

   <padding>
      <Insets top="30" left="30" right="30" bottom="30"/>
   </padding>

   <!-- Buttons -->
   <HBox spacing="20" alignment="CENTER">
      <Button text="CREATE"
              onAction="#onCreateClick"
              prefWidth="150" prefHeight="45"
              style="-fx-background-color: #0f62fe; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10;"/>
      <Button text="DELETE"
              onAction="#onDeleteClick"
              prefWidth="150" prefHeight="45"
              style="-fx-background-color: #ff5757; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10;"/>
   </HBox>

   <!-- ListView -->
   <ListView fx:id="todoList"
             prefWidth="500" prefHeight="250"
             style="-fx-background-color: white; -fx-border-color: #dcdfe6; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;"/>

</VBox>
