<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aclcbukidnon.com.javafxactivity.controllers.CounterController"
      alignment="CENTER"
      spacing="30"
      prefWidth="600" prefHeight="400"
      style="-fx-background-color: #f5f7fa;">

   <padding>
      <Insets top="30" left="30" right="30" bottom="30"/>
   </padding>

   <!-- Counter display -->
   <Label fx:id="labelCount" text="0"
          style="-fx-text-fill: #333; -fx-font-size: 72px; -fx-font-weight: bold;"/>

   <!-- Buttons -->
   <HBox spacing="20" alignment="CENTER">
      <Button text="-"
              onAction="#onMinusClick"
              prefWidth="100" prefHeight="60"
              style="-fx-background-color: #ff5757; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

      <Button text="+"
              onAction="#onPlusClick"
              prefWidth="100" prefHeight="60"
              style="-fx-background-color: #0f62fe; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-background-radius: 10;"/>
   </HBox>

</VBox>
